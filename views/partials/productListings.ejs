<% for (let i = 0; i < product.length; i++) { %>

<article class="w-25 white pad">
  <div class="product-box box-shadow">
    <a href="/products/<%=product[i].id %>">
      <div>
        <div class="product-image">
          <div class="front-image">
            <img
              src="/images/<%= product[i].image %>"
              class="fit-contain"
              alt=""
              width="100%"
              height="375px"              
            />
          </div>
          <div class="quick-view">Comprar</div>
        </div>
        <div class="det-pad">
          <div class="align-center">
            <!-- Detalle -->
            <p
              class="align-left"
              style="
                display: inline-block;
                width: 60%;
                font-size: 24px;
                color: black;
              "
            >
              $<%= product[i].price %>
            </p>
            <p
              class="align-end"
              style="
                display: inline-block;
                width: 36%;
                color: gray;
                font-size: 14px;
              "
            >
              <%=product[i].size%>
            </p>
          </div>
          <div class="name-mar">
            <p
              class="align-left"
              style="
                display: inline-block;
                color: rgb(51, 51, 51);
                font-size: 14px;
              "
            >
              <%= product.detalle %> <%=product[i].name%>
            </p>
          </div>
        </div>
      </div>
    </a>
  </div>
</article>
<% } %>
